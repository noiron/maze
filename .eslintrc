{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "globals": {
  },
  "plugins": [
    "react"
  ],
  "rules": {
      "curly": 0,
      "brace-style": [2, "1tbs"],
      "quotes": [2, "single"],
      "semi": [1, "always"],
      "space-infix-ops": 2,
      "indent": ["warn", 2, {"SwitchCase": 1}],
      "no-undef": 2,
      "no-unused-vars": "warn",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
  }
}
